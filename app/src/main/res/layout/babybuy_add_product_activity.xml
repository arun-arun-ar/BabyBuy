<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    tools:context=".BuyItemActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_start"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/hey_comic"
            android:text="Add Baby Products"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/title_input"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_style"
            android:fontFamily="@font/sugar_snow"
            android:hint="Product Title."
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/img_label"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sugar_snow"
            android:text="Select a image of product."
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="206dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/camera" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/description_input"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg_2"
            android:fontFamily="@font/sugar_snow"
            android:letterSpacing="0.2"
            android:hint="Product Description"
            android:imeOptions="actionNext"
            android:inputType="text|textMultiLine"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingBottom="50dp"
            android:textColorHint="@color/black"
            android:textSize="20dp"
             />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/price_input"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:fontFamily="@font/sugar_snow"
            android:hint="Product Price"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:letterSpacing="0.2"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/purchased_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:letterSpacing="0.06"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:fontFamily="@font/sugar_snow"
                android:textColor="@color/black"
                android:text="Mark product as Purchased"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/purchased_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutLocation"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:letterSpacing="0.09"
                android:padding="10dp"
                android:textColor="@color/black"
                android:paddingStart="30dp"
                android:fontFamily="@font/sugar_snow"
                android:text="Location"
                android:textSize="20dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/addLocation"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:elevation="3dp"
                android:src="@drawable/ic_baseline_add_location_24"
                android:tint="#15F329"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutDate"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:letterSpacing="0.09"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:text="Date"
                android:textSize="20dp"
                android:fontFamily="@font/sugar_snow"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/add_date"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:elevation="3dp"
                android:src="@drawable/ic_baseline_date_range_24"
                android:tint="@color/blue" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_btn"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:text="Save"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            />

    </LinearLayout>

</ScrollView>